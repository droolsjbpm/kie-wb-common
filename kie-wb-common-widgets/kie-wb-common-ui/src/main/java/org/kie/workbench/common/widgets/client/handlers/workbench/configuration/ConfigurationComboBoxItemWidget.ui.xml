<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:PropertiesEditor="urn:import:org.uberfire.ext.properties.editor.client.widgets">

    <ui:style>
        .container {
        margin: 10px;
        }

        .horizontalContainer {
        height:
        32px;
        }

        .right {
        float: right;
        text-align: right;
        margin-right: 10px;
        }

        .center {
        text-align: center
        }
    </ui:style>
    <g:HorizontalPanel addStyleNames="{style.horizontalContainer}">
        <g:cell>
            <g:FlowPanel addStyleNames="{style.right}">
                <PropertiesEditor:PropertyEditorItemLabel
                    ui:field="extensionItemLabel" width="200px" />
            </g:FlowPanel>
        </g:cell>
        <g:cell>
            <g:FlowPanel addStyleNames="{style.center}">
                <PropertiesEditor:PropertyEditorComboBox
                    ui:field="extensionItem" width="200px" />
            </g:FlowPanel>
        </g:cell>
    </g:HorizontalPanel>
</ui:UiBinder>