<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:with field='chromeFlags'
           type='org.kie.workbench.common.stunner.bpmn.project.client.resources.i18n.ChromeFlagsSplashScreenConstants'/>

  <g:HTMLPanel>
    <p>
      <g:Label text="{chromeFlags.flagsMessage1}"/>
    </p>
    <p>
      <g:Label text="{chromeFlags.flagsMessage2}"/>
    </p>
    <p>
      <table style="width:100%">
        <tr>
          <td colspan="2">
            <b>
              <g:Label text="{chromeFlags.flag1}"/>
            </b>
          </td>
        </tr>
        <tr>
          <td>
            <g:Label text="{chromeFlags.flag1URL}"/>
          </td>
          <td style="text-align:right;">
            <g:Hyperlink ui:field="flag1CopyLink" text="{chromeFlags.copyLink}"/>
          </td>
        </tr>
        <tr>
          <td colspan="2">
            <g:InlineLabel text="{chromeFlags.changeValue}"/>
            <b>
              <g:InlineLabel text="{chromeFlags.flag1Value}"/>
            </b>
          </td>
        </tr>
      </table>
    </p>
    <p>
      <table style="width:100%">
        <tr>
          <td colspan="2">
            <b>
              <g:Label text="{chromeFlags.flag2}"/>
            </b>
          </td>
        </tr>
        <tr>
          <td>
            <g:Label text="{chromeFlags.flag2URL}"/>
          </td>
          <td style="text-align:right;">
            <g:Hyperlink ui:field="flag2CopyLink" text="{chromeFlags.copyLink}"/>
          </td>
        </tr>
        <tr>
          <td colspan="2">
            <g:InlineLabel text="{chromeFlags.changeValue}"/>
            <b>
              <g:InlineLabel text="{chromeFlags.flag2Value}"/>
            </b>
          </td>
        </tr>
      </table>
    </p>
    <p>
      <table style="width:100%">
        <tr>
          <td colspan="2">
            <b>
              <g:Label text="{chromeFlags.flag3}"/>
            </b>
          </td>
        </tr>
        <tr>
          <td>
            <g:Label text="{chromeFlags.flag3URL}"/>
          </td>
          <td style="text-align:right;">
            <g:Hyperlink ui:field="flag3CopyLink" text="{chromeFlags.copyLink}"/>
          </td>
        </tr>
        <tr>
          <td colspan="2">
            <g:InlineLabel text="{chromeFlags.changeValue}"/>
            <b>
              <g:InlineLabel text="{chromeFlags.flag3Value}"/>
            </b>
          </td>
        </tr>
      </table>
    </p>
    <p>
      <g:Label text="{chromeFlags.flagsMessage3}"/>
    </p>
  </g:HTMLPanel>

</ui:UiBinder>
