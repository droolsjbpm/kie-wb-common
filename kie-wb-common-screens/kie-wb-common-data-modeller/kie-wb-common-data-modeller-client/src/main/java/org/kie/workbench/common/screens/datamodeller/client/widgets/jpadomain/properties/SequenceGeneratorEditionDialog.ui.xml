<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    >


  <ui:with field="i18n" type="org.uberfire.ext.plugin.client.resources.i18n.CommonConstants"/>

  <ui:style>
    .mandatory-field {
      color: #FF0000 !important;
    }
  </ui:style>

  <g:HTMLPanel>

    <b:ControlGroup ui:field="generatorControlGroup">
      <b:Controls>

        <b:ControlLabel for="generatorName"  ><g:Label ui:field="generatorNameLabel" text="Generator name"  /></b:ControlLabel>
        <b:TextBox  b:id="generatorNameLabel" ui:field="generatorName" placeholder=""/>

        <b:ControlLabel for="sequenceName"  ><g:Label ui:field="sequenceNameLabel" text="Sequence name"  /></b:ControlLabel>
        <b:TextBox b:id="sequenceNameLabel" ui:field="sequenceName" placeholder=""/>

        <b:ControlLabel for="initialValue"  ><g:Label ui:field="initialValueLabel" text="Initial value"  /></b:ControlLabel>
        <b:TextBox b:id="initialValueLabel" ui:field="initialValue" placeholder=""/>

        <b:ControlLabel for="allocationSize"  ><g:Label ui:field="allocationSizeLabel" text="Allocation size"  /></b:ControlLabel>
        <b:TextBox b:id="allocationSizeLabel" ui:field="allocationSize" placeholder="allocation size"/>

        <b:HelpInline ui:field="generatorNameInline"/>
      </b:Controls>
    </b:ControlGroup>

  </g:HTMLPanel>

</ui:UiBinder>
